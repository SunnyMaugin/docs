{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "AutoPlay",
  "colors": {
    "primary": "#cc0202",
    "light": "#cc0202",
    "dark": "#cc0202"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Configuration",
            "pages": [
              "configuration/markdown",
              "configuration/code",
              "configuration/images",
              "configuration/settings",
              "configuration/navigation",
              "configuration/reusable-snippets"
            ]
          },
          {
            "group": "Misc",
            "pages": [
              "misc/shadow-pc"
            ]  
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Website",
          "href": "https://autoplay.mysellauth.com/",
          "icon": "globe-pointer"
        },
        {
          "anchor": "Discord",
          "href": "https://discord.gg/autoplay",
          "icon": "discord"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/ap_light.svg",
    "dark": "/logo/ap_dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Community",
        "href": "https://discord.gg/autoplay"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Purchase",
      "href": "https://autoplay.mysellauth.com/"
    }
  },
  "footer": {
    "socials": {
      "website": "https://autoplay.mysellauth.com/",
      "discord": "https://discord.gg/autoplay"
    }
  }
}